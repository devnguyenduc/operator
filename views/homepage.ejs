<!doctype html>
<html lang="en">

<head>
    <title>

    </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/style.css">
    </link>
    <!-- SimpleMDE CSS, FontAwesome and SimpleMDE JS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <!-- MarkJax = Markdown + MathJax -->
    <script type="text/javascript" src="https://codeassign.github.io/markjax/dist/markjax.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- REACT API -->
</head>

<body>
    <% include navbar %>

    <div class="float-left ml-5 text-view">
        <div class="text-white">.</div>

        <div class="collapse border" style="height: 100%" id="post_view">
            <div class="m-3 p-3" id="post_viewer"></div>
        </div>
    </div>
    <div class="list-group float-left m-3 list-view">
        <button type="button" class="list-group-item list-group-item-action active" data-toggle="modal"
            data-target="#modelId" id="btn_create_post">
            Tạo bài viết mới
        </button>
        <!-- Button trigger modal -->
        <!-- Modal -->
        <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
            aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Tạo bài viết</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <form action="/save-post" method="POST">
                            <div class="form-group">
                                <label for="">File name:</label>
                                <input type="text" class="form-control" name="file_name" id="file_name" placeholder="">
                            </div>
                            <textarea name="data_post" id="create_post"></textarea>
                            <button class="btn btn-primary d-none" id="btn_post">Hello</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="save">Lưu lại</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="list-group-item list-group-item-action" data-toggle="collapse"
            data-target="#list_view" id="btn_show_list">
            Xem danh sách File
        </button>
        <div class="collapse list-view" id="list_view"></div>

        <button type="button" class="list-group-item list-group-item-action" id="btn_show_post" data-toggle="collapse"
            data-target="#post_view">
            Xem bài viết
        </button>
    </div>
    <!-- Optional JavaScript -->
    <script src="/javascripts/mde.js"></script>
    <script src="/javascripts/test_get_post.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover({ html: true });
        });
    </script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>